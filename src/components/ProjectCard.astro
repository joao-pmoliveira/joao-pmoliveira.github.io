---
interface Props {
	imgSource: string;
	imgAltText: string;
	title: string;
	keywords: string[];
	link?: string;
}
const { imgSource, imgAltText, title, keywords, link } = Astro.props;
---

<div class="project-capsule">
	<div class="img-container">
		<img src={imgSource} alt={imgAltText} />
	</div>

	<h2>{title}</h2>
	<ul>
		{keywords.map((keyword) => <li>{keyword}</li>)}
	</ul>
	{
		link && (
			<a href={link} class="btn-link" target="_blank">
				Code
				<i class="fa-solid fa-link" />
			</a>
		)
	}
</div>

<style>
	.img-container {
		width: 100%;
		position: relative;
		overflow: hidden;
		padding-top: 56.25%;
	}

	.img-container img {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: contain;
		object-position: center;
		background-color: #f0f0f0;
	}

	.project-capsule {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	ul {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
	}

	li {
		list-style: none;
		text-transform: uppercase;
		color: #b1adad;
	}
</style>
