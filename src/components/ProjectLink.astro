---
interface Props {
    link: string,
    name: string
}

const {link, name} = Astro.props;
---


<li>
    <a href={link}>
        {name}
        <i class="fa-solid fa-arrow-up-right-from-square"></i>
    </a>
</li>


<style>
    li {
        border-radius: 1em;
    }
    a {
        color: var(--text);
        text-decoration: none;

        &:hover {
            color: var(--accent);
            font-weight: bold;
        }
    }
</style>